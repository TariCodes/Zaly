---
import Nav from "../components/Nav.astro";
type Props = {
  title: string;
  description?: string;
};

const { title, description = "Get the best quality clothing designs" } =
  Astro.props;
---

<!doctype html>
<html lang="en-gb">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Nav />
    <slot />
  </body>
</html>

<style>
  body {
    background-color: rgb(249, 255, 215);
  }
</style>
